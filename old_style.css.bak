:root {
    --background: #121212;
    --container-bg: #1e1e1e;
    --text-color: #e0e0e0;
    --border-color: #333;
    --primary-color: #667eea;
    --secondary-color: #764ba2;
    --input-bg: #2d2d2d;
    --output-bg: #252525;
    --button-bg: #333;
    --button-hover: #444;
    --editor-font-size: 16px;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'PingFang SC', 'Noto Sans SC', 'Maple Mono NF CN', sans-serif;
    background: var(--background);
    color: var(--text-color);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.container {
    flex: 1;
    display: flex;
    flex-direction: column;
    max-width: 100%;
    margin: 0;
    background: var(--container-bg);
    overflow: hidden;
}

.translation-area {
    display: flex;
    flex: 1;
    min-height: 0;
    position: relative;
}

.input-section,
.output-section {
    flex: 1;
    padding: 20px;
    display: flex;
    flex-direction: column;
    min-width: 0;
    transition: flex 0.3s ease;
}

.input-section {
    border-right: 1px solid var(--border-color);
}

.collapse-btn {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    background: var(--primary-color);
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    cursor: pointer;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.collapse-btn:hover {
    background: var(--secondary-color);
    transform: translate(-50%, -50%) scale(1.1);
}

.input-section.collapsed + .collapse-btn {
    left: 16px;
    transform: translate(0, -50%);
}

.input-section.collapsed + .collapse-btn:hover {
    transform: translate(0, -50%) scale(1.1);
}

.input-section.collapsed {
    flex: 0 0 0;
    padding: 0;
    overflow: hidden;
    border-right: none;
}

.output-section.expanded {
    flex: 1;
}

.text-area,
.output-text {
    flex: 1;
    min-height: 0;
    padding: 15px;
    border: 2px solid var(--border-color);
    border-radius: 8px;
    font-size: var(--editor-font-size);
    line-height: 1.6;
    resize: none;
    font-family: inherit;
    background: var(--input-bg);
    color: var(--text-color);
    white-space: pre-wrap;
    word-wrap: break-word;
    overflow-wrap: break-word;
    overflow-x: hidden;
}

.output-text {
    background: var(--output-bg);
    overflow-y: auto;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 1px solid var(--border-color);
}

.language-selector {
    display: flex;
    align-items: center;
    gap: 10px;
}

.lang-label {
    font-weight: 600;
    color: var(--text-color);
}

select {
    padding: 8px 12px;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    background: var(--input-bg);
    color: var(--text-color);
    font-size: 14px;
    min-width: 140px;
}

.icon-btn,
.swap-btn {
    background: var(--button-bg);
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    cursor: pointer;
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.icon-btn:hover,
.swap-btn:hover {
    background: var(--button-hover);
}

.swap-btn:hover {
    transform: rotate(180deg);
}

.copy-btn {
    position: relative;
}

.copy-btn[aria-live="polite"] {
    outline: none;
}

.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

.input-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 12px;
}

.char-count {
    color: #999;
    font-size: 12px;
}

.clear-btn {
    padding: 6px 14px;
    border-radius: 16px;
    border: 1px solid transparent;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    color: #fff;
    font-size: 13px;
    cursor: pointer;
    transition: opacity 0.2s ease, transform 0.2s ease;
}

.clear-btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
}

.clear-btn:active {
    transform: translateY(0);
}

.loading {
    display: none;
    text-align: center;
    padding: 20px;
    color: var(--primary-color);
}

.loading-spinner {
    border: 3px solid #333;
    border-top: 3px solid var(--primary-color);
    border-radius: 50%;
    width: 30px;
    height: 30px;
    animation: spin 1s linear infinite;
    margin: 0 auto 10px;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

.status-bar {
    background: var(--container-bg);
    padding: 15px 30px;
    border-top: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: wrap;
    align-items: center;
    font-size: 14px;
    color: var(--text-color);
}

.auto-translate {
    display: flex;
    align-items: center;
    gap: 10px;
}

.font-size-control {
    display: flex;
    align-items: center;
    gap: 12px;
}

.font-size-control label {
    font-weight: 600;
    color: var(--text-color);
    white-space: nowrap;
}

.font-size-control input[type="range"] {
    -webkit-appearance: none;
    appearance: none;
    width: 160px;
    height: 4px;
    border-radius: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    outline: none;
}

.font-size-control input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: #fff;
    border: 2px solid var(--primary-color);
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
}

.font-size-control input[type="range"]::-moz-range-thumb {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: #fff;
    border: 2px solid var(--primary-color);
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
}

.font-size-control input[type="range"]::-moz-range-track {
    height: 4px;
    border-radius: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
}

.font-size-control .font-size-value {
    min-width: 42px;
    text-align: right;
    font-variant-numeric: tabular-nums;
    color: var(--text-color);
}

.switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 24px;
}

.switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--button-bg);
    transition: 0.4s;
    border-radius: 24px;
}

.slider:before {
    position: absolute;
    content: "";
    height: 16px;
    width: 16px;
    left: 4px;
    bottom: 4px;
    background-color: #fff;
    transition: 0.4s;
    border-radius: 50%;
}

input:checked + .slider {
    background-color: var(--primary-color);
}

input:checked + .slider:before {
    transform: translateX(26px);
}

.history-section {
    border-top: 1px solid var(--border-color);
    background: var(--container-bg);
    padding: 20px 30px 30px;
}

.history-details {
    width: 100%;
}

.history-details summary {
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    list-style: none;
    outline: none;
    display: flex;
    align-items: center;
    gap: 8px;
}

.history-details summary::marker {
    display: none;
}

.history-details summary::before {
    content: '\25B6';
    display: inline-block;
    transform: rotate(0deg);
    transition: transform 0.2s ease;
    color: var(--primary-color);
}

.history-details[open] summary::before {
    transform: rotate(90deg);
}

.history-list {
    margin-top: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.history-list.empty {
    gap: 0;
}

.history-empty {
    color: #888;
    font-size: 14px;
}

.history-item {
    border: 1px solid var(--border-color);
    border-radius: 10px;
    background: var(--input-bg);
    padding: 14px 18px;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.history-item-header {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 10px;
    font-size: 14px;
}

.history-meta {
    font-weight: 600;
    color: var(--text-color);
}

.history-time {
    color: #9aa0a6;
    font-size: 12px;
}

.history-text-block {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.history-text-label {
    font-size: 12px;
    color: #a0a0a0;
    letter-spacing: 0.5px;
}

.history-text {
    margin: 0;
    padding: 12px;
    background: var(--output-bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    font-family: inherit;
    font-size: 13px;
    line-height: 1.6;
    white-space: pre-wrap;
    word-wrap: break-word;
    overflow-wrap: break-word;
}

.history-actions {
    display: flex;
    justify-content: flex-end;
}

.history-reuse {
    padding: 6px 14px;
    border-radius: 16px;
    border: 1px solid transparent;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    color: #fff;
    font-size: 13px;
    cursor: pointer;
    transition: opacity 0.2s ease, transform 0.2s ease;
}

.history-reuse:hover {
    opacity: 0.9;
    transform: translateY(-1px);
}

.history-reuse:active {
    transform: translateY(0);
}

@media (max-width: 960px) {
    .translation-area {
        flex-direction: column;
    }

    .input-section {
        border-right: none;
        border-bottom: 1px solid var(--border-color);
    }

    .collapse-btn {
        display: none;
    }
}
